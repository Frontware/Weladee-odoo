<?xml version="1.0" encoding="utf-8"?>
<!-- 
	purpose : render synchronous settings

	remarks :
	2018-05-28 KPO moved
 -->
<odoo>
    <record id="weladee_setting_wizard" model="ir.ui.view">
        <field name="name">weladee_setting_wizard</field>
        <field name="model">weladee_attendance.synchronous.setting</field>
        <field name="arch" type="xml">
            <form string="Setting">
                <header>
                    <button name="saveBtn" string="Save" class="oe_highlight" type="object"/>
                    <button name="cancel" string="Cancel"/>
                </header>
                <group>
                    <!-- left -->
                    <group string="API">
                        <field name="api_database" readonly="1" />
                        <field name="api_key"/>
                    </group>
                    <group></group>

                    <group string="Synchronization">
                        <label for="sync_position" string="Position"/>
                        <div>
                            <div>
                                <field name="sync_position" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_department" string="Department"/>
                        <div>
                            <div>
                                <field name="sync_department" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_employee" string="Employee"/>
                        <div>
                            <div>
                                <field name="sync_employee" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_holiday" string="Holiday"/>
                        <div>
                            <div>
                                <field name="sync_holiday" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_attendance" string="Attendance"/>
                        <div>
                            <div>
                                <field name="sync_attendance" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_timesheet" string="Timesheet"/>
                        <div>
                            <div>
                                <field name="sync_timesheet" class="oe_inline"/>
                                <label attrs="{'invisible':[('sync_timesheet','=',False)]}" for="sync_timesheet" string="Also sync Customer, Project and Task" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_expense" string="Expense"/>
                        <div>
                            <div>
                                <field name="sync_expense" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_job" string="Job"/>
                        <div>
                            <div>
                                <field name="sync_job" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_approval" string="Approval"/>
                        <div>
                            <div>
                                <field name="sync_approval" class="oe_inline"/>
                            </div>
                        </div>    
                        <label for="sync_skill" string="Skill"/>
                        <div>
                            <div>
                                <field name="sync_skill" class="oe_inline"/>
                            </div>
                        </div>    
                    </group>
                
                    <group string="Settings">
                    <notebook>
                        <page string="Holiday" attrs="{'invisible':[('sync_holiday','=',False)]}">
                            <group>
                                <field name="tz" attrs="{'required':[('sync_holiday','=',True)]}"/>
                                <field name="holiday_status_id" attrs="{'required':[('sync_holiday','=',True)]}"/>
                                <field name="sick_status_id" attrs="{'required':[('sync_holiday','=',True)]}"/>
                                <label for="holiday_notify_leave_req" string="Notify" />
                                <div>
                                    <field name="holiday_notify_leave_req"/>
                                </div>
                                <label for="holiday_period"/>
                                <div>
                                    <field attrs="{'required':[('sync_holiday','=',True)],'invisible':[('holiday_period','=','all')]}" name="holiday_period_unit" class="oe_inline" />
                                    <span attrs="{'invisible':[('holiday_period','=','all')]}">&amp;nbsp;</span>
                                    <field name="holiday_period" style="height:24px" attrs="{'required':[('sync_holiday','=',True)]}" class="oe_inline" />
                                </div>
                            </group>
                            <group attrs="{'invisible':[('holiday_notify_leave_req','=',False)]}">
                                <span class="o_form_label">to email</span><br/>
                                <div>
                                    <field name="holiday_notify_leave_req_email" attrs="{'required':[('holiday_notify_leave_req','=',True)]}"/>
                                </div>
                                <br/>
                                <span class="o_form_label">*Note: you can separate each email by ;</span>
                            </group>
                        </page>
                        <page string="Attendance" attrs="{'invisible':[('sync_attendance','=',False)]}">
                            <group>
                                <label for="log_period"/>
                                <div>
                                    <field attrs="{'required':[('sync_attendance','=',True)],'invisible':[('log_period','=','all')]}" name="log_period_unit" class="oe_inline" />
                                    <span attrs="{'invisible':[('log_period','=','all')]}">&amp;nbsp;</span>
                                    <field name="log_period" attrs="{'required':[('sync_attendance','=',True)]}" style="height:24px" class="oe_inline" />
                                </div>
                                <field name="sync_attendance"/>
                            </group>
                        </page>
                        <page string="Timesheet" attrs="{'invisible':[('sync_timesheet','=',False)]}">
                            <group>
                                <field name="account_analytic_id" attrs="{'required':[('sync_timesheet','=',True)]}"/>
                            </group>
                        </page>
                        <page string="Expense" attrs="{'invisible':[('sync_expense','=',False)]}">
                            <group>
                                <field name="expense_product_id" attrs="{'required':[('sync_expense','=',True)]}"/>
                            </group>
                        </page>
                        <page string="Notification">
                            <group>
                                <label for="email"/>
                                <div>
                                    <field name="email" requird="1"/>
                                    <br/>
                                    <span class="o_form_label">*Note: you can separate each email by ;</span>
                                </div>
                            </group>
                            <group>
                                <div>
                                    <field name="api_debug" nolabel="1" class="oe_inline"/>
                                    <label for="api_debug" />
                                </div>
                            </group>
                        </page>                    
                    </notebook>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_weladee_setting_form">
        <field name="name">Weladee Settings</field>
        <field name="res_model">weladee_attendance.synchronous.setting</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="weladee_setting_wizard"/>
        <field name="target">inline</field>
    </record>    
</odoo>  