<?xml version="1.0" encoding="utf-8"?>
<!-- 
	purpose : render synchronous settings

	remarks :
	2018-05-28 KPO moved
 -->
<odoo>
    <record id="weladee_setting_wizard" model="ir.ui.view">
        <field name="name">weladee_setting_wizard</field>
        <field name="model">weladee_attendance.synchronous.setting</field>
        <field name="arch" type="xml">
            <form string="Setting">
                <notebook>
                    <page string="API">
                        <group>
                            <field name="api_database" readonly="1" />
                            <field name="api_key"/>
                        </group>
                    </page>
                    <page string="Employee">
                        <group>
                            <field name="sync_employee"/>
                        </group>
                    </page>
                    <page string="Position">
                        <group>
                            <field name="sync_position"/>
                        </group>
                    </page>
                    <page string="Department">
                        <group>
                            <field name="sync_department"/>
                        </group>
                    </page>
                    <page string="Customer">
                        <group>
                            <field name="sync_customer"/>
                        </group>
                    </page>
                    <page string="Attendance">
                        <group>
                            <label for="log_period"/>
                            <div>
                                <field attrs="{'invisible':[('log_period','=','all')]}" name="log_period_unit" class="oe_inline" />
                                <span attrs="{'invisible':[('log_period','=','all')]}">&amp;nbsp;</span>
                                <field name="log_period" style="height:24px" class="oe_inline" />
                            </div>
                            <field name="sync_attendance"/>
                        </group>
                    </page>
                    <page string="Holiday">
                        <group>
                            <field name="tz"/>
                            <field name="holiday_status_id"/>
                            <field name="sick_status_id"/>
                            <label for="holiday_notify_leave_req" string="Notify" />
                            <div>
                                <field name="holiday_notify_leave_req"/>
                            </div>
                            <label for="holiday_period"/>
                            <div>
                                <field attrs="{'invisible':[('holiday_period','=','all')]}" name="holiday_period_unit" class="oe_inline" />
                                <span attrs="{'invisible':[('holiday_period','=','all')]}">&amp;nbsp;</span>
                                <field name="holiday_period" style="height:24px" class="oe_inline" />
                            </div>
                            <field name="sync_holiday"/>
                        </group>
                        <group attrs="{'invisible':[('holiday_notify_leave_req','=',False)]}">
                            <span class="o_form_label">to email</span><br/>
                            <div>
                                <field name="holiday_notify_leave_req_email" attrs="{'required':[('holiday_notify_leave_req','=',True)]}"/>
                            </div>
                            <br/>
                            <span class="o_form_label">*Note: you can separate each email by ;</span>
                        </group>
                    </page>
                    <page string="Expense">
                        <group>
                            <field name="expense_product_id"/>
                            <field name="sync_expense"/>
                        </group>
                    </page>
                    <page string="Notification">
                        <group>
                            <label for="email"/>
                            <div>
                                <field name="email" requird="1"/>
                                <br/>
                                <span class="o_form_label">*Note: you can separate each email by ;</span>
                            </div>
                        </group>
                        <group>
                            <div>
                                <field name="api_debug" nolabel="1" class="oe_inline"/>
                                <label for="api_debug" />
                            </div>
                        </group>
                    </page>
                    <page string="Timesheet">
                        <group>
                            <field name="account_analytic_id"/>
                            <field name="sync_timesheet"/>
                        </group>
                    </page>
                    <page string="Job">
                        <group>
                            <field name="sync_job"/>
                        </group>
                    </page>
                    <page string="Skill">
                        <group>
                            <field name="sync_skill"/>
                        </group>
                    </page>
                    <page string="Approval">
                        <group>
                            <field name="sync_approval"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button icon="fa-close" special="cancel" string="Close"/>
                    <button icon="fa-gear" name="saveBtn" string="Save" class="oe_highlight" type="object"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_weladee_setting_form">
        <field name="name">Weladee Settings</field>
        <field name="res_model">weladee_attendance.synchronous.setting</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="weladee_setting_wizard"/>
        <field name="target">new</field>
    </record>    
</odoo>  