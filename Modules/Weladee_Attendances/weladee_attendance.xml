<?xml version="1.0"?>
<!-- 
	purpose : render synchronous

	remarks :
	2017-07-18 CKA add view synchronous menu For sync Employee, Department, Holiday and attences on Attendances menu
 -->
<openerp>
    <data>

        <record id="weladee_attendance_wizard" model="ir.ui.view">
            <field name="name">weladee_attendance_wizard</field>
            <field name="model">weladee_attendance.synchronous</field>
            <field name="arch" type="xml">
                <form string="Synchronous">
                    <label string="List for synchronous" colspan="4" /><br />
                    <label string="   - Employees" colspan="4" /><br />
                    <label string="   - Departments" colspan="4" /><br />
                    <label string="   - Holidays" colspan="4" /><br />
                    <label string="   - Attences" colspan="4" />
                    <footer>
                        <button icon="gtk-cancel"  special="cancel"   string="Close"/>
                        <button icon="gtk-execute" string="Synchronous" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_weladee_attendance_synchronous_form">
            <field name="name">Synchronous wizard</field>
            <field name="res_model">weladee_attendance.synchronous</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="weladee_attendance_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="weladee_attendance_synchronous_menu"
                  name="Synchronous"
                  sequence="99"
                  parent="hr_attendance.menu_hr_attendance_root"
                  groups="base.group_hr_attendance"
                  action="action_weladee_attendance_synchronous_form"
        />

    </data>
</openerp>    