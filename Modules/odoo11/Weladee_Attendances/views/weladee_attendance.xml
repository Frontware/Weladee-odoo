<?xml version="1.0" encoding="utf-8"?>
<!-- 
	purpose : render synchronous info form

	remarks :
	2017-07-18 CKA add view synchronous menu For sync Employee, Department, Holiday and attences on Attendances menu
    2018-05-24 KPO move hr_employee_weladee_profile to views/fw_hr_employee.xml
 -->
<odoo>
    <data>
        <record id="weladee_attendance_wizard_frm" model="ir.ui.view">
            <field name="name">weladee_attendance_wizard_frm</field>
            <field name="model">weladee_attendance_form</field>
            <field name="arch" type="xml">
               <form string="Weladee Synchronization">
                    <label string="List" colspan="4" /><br />
                    <label string="   - Positions" colspan="4" /><br />
                    <label string="   - Departments" colspan="4" /><br />
                    <label string="   - Employees" colspan="4" /><br />
                    <label string="   - Holidays" colspan="4" /><br />
                    <label string="   - Attendance" colspan="4" />
                    <br />
                    <br />
                    <label string="After synchronization, result will send to email address below" />
                    <field name="email" readonly="1" />
                    <footer>
                        <button icon="fa-close"  special="cancel"   string="Close"/>
                        <button icon="fa-random" name="synchronousBtn" string="Synchronize" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="weladee_attendance_wizard_frm_ok" model="ir.ui.view">
            <field name="name">weladee_attendance_wizard_frm_ok</field>
            <field name="model">weladee_attendance_form</field>
            <field name="arch" type="xml">
               <form string="Synchronous">
                    <label string="Synchronous started, you will receive email at email address below once it's done." />
                    <field name="email" readonly="1" />
                    <footer>
                        <button icon="fa-close"  special="cancel"   string="Close"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="weladee_attendance_synchronous_act_server" model="ir.actions.server">
            <field name="name">Weladee Synchronization</field>
            <field name="model_id" ref="model_weladee_attendance_form"/>
            <field name="state">code</field>
            <field name="code">action = model.open_sync_form()</field>
        </record>
 
        <menuitem id="weladee_attendance_synchronous_menu"
                  name="Weladee Synchronization"
                  sequence="75"
                  action="weladee_attendance_synchronous_act_server"
                  parent="hr_attendance.menu_hr_attendance_root"
                  groups="hr_attendance.group_hr_attendance_manager"
        />
    </data>

    <data noupdate="1">
        <record id="weladee_attendance_synchronous_cron" model="ir.cron">
            <field name="name">Weladee Attendance: Synchronous task</field>
            <field name="model_id" ref="model_weladee_attendance_synchronous"/>
            <field name="state">code</field>
            <field name="code">model.start_sync()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
        </record>

        <record id="weladee_attendance_synchronous_cron_mail" model="mail.template">
            <field name="name">Weladee Attendance: Synchronous task</field>
            <field name="email_from"></field>
            <field name="email_to">${ctx.get('request-email','')}</field>
            <field name="subject">Weladee Attendance: Synchronous task's result from request at ${ctx.get('request-date','')}</field>
            <field name="model_id" ref="model_weladee_attendance_synchronous"/>
            <field name="body_html" type="html">
<div>
<p>Hi,
<br>
There is a request to do Weladee Synchronization at ${ctx.get('request-date')}
</p>
% if ctx.get('request-error',False):
    There is an error occured when run Synchronization:<br>
    <ul>
    % for err in ctx.get('request-logs'):
      % if err[0] == 'e'
        <li>${err[1]}</li>
      % endif
    % endfor
    </ul>
% else:

    % if ctx.get('request-logs-y',False) == 'Y':

        There is an error occured when run Synchronization:<br>
        <ul>
            % for err in ctx.get('request-logs'):
                % if err[0] == 'e'
                <li>${err[1]}</li>
                % endif
            % endfor
        </ul>

    % else:

        These data are successfully sync with Weladee:
        <ul>
            <li>Positon</li>
            <li>Department</li>
            <li>Employee</li>
            <li>Attendances</li>
            <li>Holidays</li>
        </ul>

    % endif

% endif

% if ctx.get('request-debug',''):
    <br>
    log info:<br>
    <ul>
        % for err in ctx.get('request-logs'):
            % if err[0] == 'e'
                <li><b>${err[1]}</b></li>
            % endif
            % if err[0] == 'w'
                <li><i>${err[1]}</i></li>
            % endif
            % if err[0] == 'd' and ctx.get('request-debug','') == 'Y':
                <li>${err[1]}</li>
            % endif
            % if err[0] == 'i'
                <li>${err[1]}</li>
            % endif
        % endfor
    </ul>
% endif
</div>
<p>
*This email is generated on database = ${user.env.cr.dbname}
</p>
</field>
        </record>
    </data>
</odoo>  