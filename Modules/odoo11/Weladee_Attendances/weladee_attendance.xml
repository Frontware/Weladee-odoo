        <record id="weladee_attendance_wizard" model="ir.ui.view">
            <field name="name">weladee_attendance_wizard</field>
            <field name="model">weladee_attendance.synchronous</field>
            <field name="arch" type="xml">
               <form string="Synchronous">
                    <label string="List" colspan="4" /><br />
                    <label string="   - Positions" colspan="4" /><br />
                    <label string="   - Employees" colspan="4" /><br />
                    <label string="   - Departments" colspan="4" /><br />
                    <label string="   - Holidays" colspan="4" /><br />
                    <label string="   - Attendance" colspan="4" />
                    <footer>
                        <button icon="fa-close"  special="cancel"   string="Close"/>
                        <button icon="fa-random" name="synchronousBtn" string="Synchronize" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_weladee_attendance_synchronous_form">
            <field name="name">Weladee synchronization</field>
            <field name="res_model">weladee_attendance.synchronous</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="weladee_attendance_wizard"/>
            <field name="target">new</field>
        </record>
 
        <menuitem id="weladee_attendance_synchronous_menu"
                  name="Weladee Synchronization"
                  sequence="75"
                  action="action_weladee_attendance_synchronous_form"
                  parent="hr_attendance.menu_hr_attendance_root"
                  groups="hr_attendance.group_hr_attendance_manager"
        />




        <record id="weladee_setting_wizard" model="ir.ui.view">
            <field name="name">weladee_setting_wizard</field>
            <field name="model">weladee_attendance.synchronous.setting</field>
            <field name="arch" type="xml">
                <form string="Setting">
                    <group>
                        <field name="api_key"/>
                        <field name="holiday_status_id"/>
                    </group>
                    <footer>
                        <button icon="gtk-cancel"  special="cancel"   string="Close"/>
                        <button icon="gtk-execute" name="saveBtn" string="Save" class="oe_highlight" type="object"/>
                    </footer>
                </form>
            </field>
        </record>
 
        <record model="ir.actions.act_window" id="action_weladee_setting_form">
            <field name="name">Weladee setting</field>
            <field name="res_model">weladee_attendance.synchronous.setting</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="weladee_setting_wizard"/>
            <field name="target">new</field>
        </record>
 
        <menuitem id="weladee_setting_menu"
                  name="Weladee setting"
                  sequence="76"
                  parent="hr_attendance.menu_hr_attendance_root"
                  groups="hr_attendance.group_hr_attendance_manager"
                  action="action_weladee_setting_form"
        />

        <record id="hr_employee_weladee_profile" model="ir.ui.view">
            <field name="name">hr_employee_weladee_profile</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
               <!-- <xpath expr="//field[@name='show_leaves']" position="after">
                   <button 
                        icon="fa-address-book" 
                        name="open_weladee_employee" 
                        string="Weladee profile" 
                        class="oe_stat_button" 
                        type="object"
                        widget="url"
                    />  
                </xpath> -->
                <xpath expr="//field[@name='address_id']" position="before">
                    <field name="weladee_profile" widget="url" readonly="1"/>
                </xpath>
                <xpath expr="//field[@name='department_id']" position="before">
                    <field name="receive_check_notification"/>
                    <field name="can_request_holiday" />
                    <field name="hasToFillTimesheet" />
                </xpath>
                <xpath expr="//field[@name='category_ids']" position="after">
                    <group>
                        <field name="first_name_english"/>
                        <field name="last_name_english"/>
                        <field name="first_name_thai"/>
                        <field name="last_name_thai"/>
                        <field name="nick_name_english"/>
                        <field name="nick_name_thai"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='work_phone']" position="after">
                    <field name="passportNumber"/>
                    <field name="taxID"/>
                    <field name="nationalID"/>
                </xpath>

                
            </field>
        </record>

</odoo>  